{
  "name": "@aivec/wp-typescript-react",
  "version": "2.0.0",
  "description": "Build script for WordPress TypeScript React plugins/projects. Includes some features from @wordpress/scripts such as automatic asset inclusion/exclusion.",
  "bin": {
    "aivec-wpreact": "./dist/index.js"
  },
  "scripts": {
    "lint": "eslint --ext .ts src",
    "lint:fix": "eslint --fix --ext .ts src",
    "format": "prettier -c src/**/*.ts",
    "format:fix": "prettier --write src/**/*.ts",
    "build": "tsc -p .",
    "start": "ts-node src/index.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aivec/wp-typescript-react.git"
  },
  "keywords": [
    "WordPress",
    "TypeScript",
    "React",
    "webpack"
  ],
  "author": "Evan D Shaw <evandanielshaw@gmail.com>",
  "license": "GPL-2.0",
  "bundleDependencies": false,
  "dependencies": {
    "cross-env": "^7.0.3",
    "cross-spawn": "^7.0.3",
    "glob": "^7.1.7",
    "yargs": "^17.0.1"
  },
  "devDependencies": {
    "@types/cross-spawn": "^6.0.2",
    "@types/node": "^15.0.2",
    "@types/yargs": "^16.0.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  },
  "prettier": {
    "printWidth": 100,
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "eslintIgnore": [
    "test/**/*.js"
  ],
  "eslintConfig": {
    "plugins": [
      "prettier",
      "@typescript-eslint/eslint-plugin"
    ],
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./tsconfig.json",
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "settings": {
      "import/parsers": {
        "@typescript-eslint/parser": [
          ".ts"
        ]
      },
      "import/resolver": {
        "typescript": {}
      }
    }
  }
}
