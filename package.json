{
  "name": "@aivec/wp-typescript-react",
  "version": "1.0.3",
  "description": "Build script for WordPress TypeScript React plugins/projects. Includes some features from @wordpress/scripts such as automatic asset inclusion/exclusion.",
  "bin": {
    "aivec-wpreact": "./dist/index.js"
  },
  "scripts": {
    "lint": "eslint --ext .ts src",
    "lint:fix": "eslint --fix --ext .ts src",
    "format": "prettier -c src/**/*.ts",
    "format:fix": "prettier --write src/**/*.ts",
    "build": "tsc -p . && cp src/cmds/configs/webpack.config.js dist/cmds/configs/",
    "start": "ts-node src/index.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aivec/wp-typescript-react.git"
  },
  "keywords": [
    "WordPress",
    "TypeScript",
    "React",
    "webpack"
  ],
  "author": "Evan D Shaw <evandanielshaw@gmail.com>",
  "license": "GPL-2.0",
  "bundleDependencies": false,
  "dependencies": {
    "@babel/core": "^7.12.3",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-react": "^7.12.1",
    "@babel/preset-typescript": "^7.12.1",
    "@svgr/webpack": "^5.4.0",
    "@typescript-eslint/eslint-plugin": "^4.4.1",
    "@typescript-eslint/parser": "^4.4.1",
    "@wordpress/dependency-extraction-webpack-plugin": "^2.8.0",
    "babel-loader": "^8.1.0",
    "babel-plugin-styled-components": "^1.11.1",
    "cross-spawn": "^7.0.3",
    "eslint": "^7.11.0",
    "eslint-config-airbnb-typescript": "^11.4.0",
    "eslint-config-prettier": "^6.13.0",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.4",
    "eslint-plugin-react-hooks": "^4.1.2",
    "file-loader": "^6.1.1",
    "prettier": "^2.1.2",
    "resolve-bin": "^0.4.0",
    "source-map-loader": "^1.1.1",
    "stylelint": "^13.7.2",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.10.0",
    "terser-webpack-plugin": "^4.2.3",
    "thread-loader": "^3.0.0",
    "webpack": "^4.8.3",
    "webpack-bundle-analyzer": "^3.9.0",
    "webpack-cli": "^4.0.0",
    "webpack-livereload-plugin": "^2.3.0",
    "yargs": "^16.1.0"
  },
  "devDependencies": {
    "@types/node": "^14.11.10",
    "@types/yargs": "^15.0.9",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  },
  "prettier": {
    "printWidth": 100,
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "eslintIgnore": [
    "test/**/*.js"
  ],
  "eslintConfig": {
    "plugins": [
      "prettier",
      "@typescript-eslint/eslint-plugin"
    ],
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./tsconfig.json",
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "settings": {
      "import/parsers": {
        "@typescript-eslint/parser": [
          ".ts"
        ]
      },
      "import/resolver": {
        "typescript": {}
      }
    }
  }
}
