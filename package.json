{
  "name": "@aivec/wp-typescript-react",
  "version": "1.0.0",
  "description": "Build script for WordPress TypeScript React plugins/projects. Includes some features from @wordpress/scripts such as automatic asset inclusion/exclusion.",
  "bin": {
    "aivec-wpreact": "./dist/index.js"
  },
  "scripts": {
    "lint": "eslint --ext .ts src",
    "lint:fix": "eslint --fix --ext .ts src",
    "format": "prettier -c src/**/*.ts",
    "format:fix": "prettier --write src/**/*.ts",
    "build": "tsc -p .",
    "start": "ts-node src/index.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aivec/wp-typescript-react.git"
  },
  "keywords": [
    "WordPress",
    "TypeScript",
    "React",
    "webpack"
  ],
  "author": "Evan D Shaw <evandanielshaw@gmail.com>",
  "license": "GPL-2.0",
  "dependencies": {
    "@wordpress/dependency-extraction-webpack-plugin": "^2.8.0",
    "terser-webpack-plugin": "^4.2.3",
    "webpack-bundle-analyzer": "^3.9.0"
  },
  "devDependencies": {
    "@types/node": "^14.11.8",
    "@types/yargs": "^15.0.8",
    "@typescript-eslint/eslint-plugin": "^4.4.1",
    "@typescript-eslint/parser": "^4.4.1",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.1.4",
    "prettier": "^2.1.2",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3",
    "yargs": "^16.0.3"
  },
  "prettier": {
    "printWidth": 100,
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "eslintIgnore": [
    "test/**/*.js"
  ],
  "eslintConfig": {
    "plugins": [
      "prettier",
      "@typescript-eslint/eslint-plugin"
    ],
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./tsconfig.json",
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "settings": {
      "import/parsers": {
        "@typescript-eslint/parser": [
          ".ts"
        ]
      },
      "import/resolver": {
        "typescript": {}
      }
    }
  }
}
